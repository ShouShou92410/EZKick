{
	"manifest_version": 3,
	"name": "EZKick",
	"version": "1.0",
	"icons": {
		"16": "icon16.png",
		"32": "icon32.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"permissions": ["storage", "tabs", "identity"],
	"action": {
		"default_popup": "index.html"
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["https://kick.com/*"],
			"js": ["content.js"]
		}
	]
}
